/* pages/cart/cart.wxss - iOS风格毛玻璃效果 */

.cart-page {
  background: linear-gradient(180deg, #FAF5FF 0%, #F3E8FF 50%, #EDE9FE 100%);
  min-height: 100vh;
  padding-bottom: 160rpx;
}

.cart-list {
  padding: 20rpx 24rpx;
}

/* ========== 购物车商品卡片 - 毛玻璃效果 ========== */

.cart-item {
  display: flex;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(139, 92, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.cart-item:active {
  transform: scale(0.99);
  box-shadow: 0 4rpx 20rpx rgba(139, 92, 246, 0.12);
}

.item-left {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

/* ========== 复选框 - 毛玻璃效果 ========== */

.checkbox {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid rgba(139, 92, 246, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.checkbox:active {
  transform: scale(0.9);
}

.checkbox-icon {
  font-size: 24rpx;
  color: transparent;
  font-weight: 700;
}

.checkbox.checked {
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  border-color: transparent;
  transform: scale(1.05);
  box-shadow: 
    0 6rpx 20rpx rgba(139, 92, 246, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.checkbox.checked:active {
  transform: scale(0.95);
}

.checkbox.checked .checkbox-icon {
  color: white;
}

.item-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(167, 139, 250, 0.2), rgba(139, 92, 246, 0.15));
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(139, 92, 246, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.1);
}

.item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-name {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 600;
  line-height: 1.4;
}

.item-spec {
  font-size: 24rpx;
  color: #9CA3AF;
}

.item-price-qty {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 14rpx;
}

.item-price {
  font-size: 34rpx;
  color: #EF4444;
  font-weight: 700;
}

/* ========== 数量控制 - 毛玻璃效果 ========== */

.quantity-control {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.qty-btn {
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: rgba(139, 92, 246, 0.1);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #8B5CF6;
  border: 1rpx solid rgba(139, 92, 246, 0.15);
  transition: all 0.3s ease;
}

.qty-btn:active {
  background: rgba(139, 92, 246, 0.2);
  transform: scale(0.95);
}

.qty-num {
  font-size: 30rpx;
  color: #1F2937;
  min-width: 64rpx;
  text-align: center;
  font-weight: 600;
}

/* ========== 空状态 ========== */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 140rpx 60rpx;
}

.empty-icon {
  width: 220rpx;
  height: 220rpx;
  margin-bottom: 48rpx;
  opacity: 0.7;
}

.empty-title {
  font-size: 34rpx;
  color: #1F2937;
  font-weight: 600;
  margin-bottom: 14rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #9CA3AF;
  margin-bottom: 48rpx;
}

.go-shop-btn {
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  color: white;
  border-radius: 48rpx;
  padding: 28rpx 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 
    0 10rpx 32rpx rgba(139, 92, 246, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  border: none;
  transition: all 0.3s ease;
}

.go-shop-btn::after {
  border: none;
}

.go-shop-btn:active {
  transform: scale(0.97);
  box-shadow: 0 6rpx 24rpx rgba(139, 92, 246, 0.45);
}

/* ========== 加载状态 ========== */

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(139, 92, 246, 0.15);
  border-top: 4rpx solid #8B5CF6;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #9CA3AF;
}

/* ========== 底部结算栏 - 毛玻璃效果 ========== */

.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(50rpx);
  -webkit-backdrop-filter: blur(50rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  box-shadow: 
    0 -8rpx 32rpx rgba(139, 92, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
  border-top: 1rpx solid rgba(139, 92, 246, 0.08);
}

.select-all {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.select-text {
  font-size: 28rpx;
  color: #6B7280;
  font-weight: 500;
}

.total-info {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.total-label {
  font-size: 26rpx;
  color: #6B7280;
}

.total-price {
  font-size: 38rpx;
  color: #EF4444;
  font-weight: 700;
}

.action-buttons {
  display: flex;
  gap: 18rpx;
}

.delete-btn {
  background: linear-gradient(135deg, #F472B6, #EC4899);
  color: white;
  border-radius: 36rpx;
  padding: 22rpx 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 
    0 6rpx 20rpx rgba(244, 114, 182, 0.35),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.97);
}

.checkout-btn {
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  color: white;
  border-radius: 36rpx;
  padding: 22rpx 52rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 
    0 6rpx 24rpx rgba(139, 92, 246, 0.35),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.checkout-btn:active {
  transform: scale(0.97);
}
