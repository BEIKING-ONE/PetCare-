/* pages/pet-add/pet-add.wxss */
.pet-add-page {
  background: linear-gradient(180deg, #FAF5FF 0%, #F5F3FF 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.form-section {
  background: white;
  margin: 20rpx 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.08);
  border: 1rpx solid #E9D5FF;
}

.section-title {
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
  border-bottom: 1rpx solid #E9D5FF;
}

.avatar-upload {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.avatar-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #FAF5FF;
}

.avatar-emoji {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  background: #FAF5FF;
  border-radius: 50%;
}

.upload-mask {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 200rpx;
  background: rgba(139, 92, 246, 0.5);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-upload:active .upload-mask {
  opacity: 1;
}

.upload-icon {
  font-size: 40rpx;
  color: white;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 22rpx;
  color: white;
}

.form-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #E9D5FF;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 64rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #1F2937;
  border: 1rpx solid #E9D5FF;
  border-radius: 12rpx;
  background: #FAF5FF;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  font-size: 28rpx;
  color: #1F2937;
  border: 1rpx solid #E9D5FF;
  border-radius: 12rpx;
  background: #FAF5FF;
  line-height: 1.6;
}

.picker-value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 64rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #1F2937;
  border: 1rpx solid #E9D5FF;
  border-radius: 12rpx;
  background: #FAF5FF;
}

.picker-arrow {
  font-size: 32rpx;
  color: #9CA3AF;
}

.submit-section {
  padding: 40rpx 24rpx;
}

.submit-btn {
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  color: white;
  border-radius: 40rpx;
  padding: 24rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(139, 92, 246, 0.4);
  border: none;
}

.submit-btn::after {
  border: none;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E9D5FF;
  border-top: 4rpx solid #8B5CF6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: white;
}

/* 头像选择区域 */
.avatar-section {
  padding: 30rpx;
}

.avatar-preview {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.avatar-emoji-large {
  font-size: 120rpx;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FAF5FF;
  border-radius: 50%;
}

.avatar-edit-tip {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 15rpx;
}

/* Emoji选择器弹窗 */
.emoji-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.emoji-picker-content {
  width: 100%;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.emoji-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E9D5FF;
}

.emoji-picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.emoji-picker-close {
  font-size: 36rpx;
  color: #9CA3AF;
  padding: 10rpx;
}

.emoji-picker-body {
  flex: 1;
  padding: 20rpx;
  max-height: 60vh;
}

.emoji-category {
  margin-bottom: 30rpx;
}

.category-title {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 15rpx;
  padding-left: 10rpx;
}

.emoji-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.emoji-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: #FAF5FF;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.emoji-item:active {
  background: #F3E8FF;
  transform: scale(1.1);
}
