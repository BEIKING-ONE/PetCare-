/* pages/funeral-service/funeral-service.wxss */
.service-page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 服务头部 */
.service-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  padding: 60rpx 30rpx;
  text-align: center;
  color: white;
}

.service-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.service-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.service-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 服务介绍 */
.service-intro {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.intro-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.intro-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 通用标题 */
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

/* 服务套餐 */
.service-packages {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.package-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.package-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.package-item.selected {
  background: #f0f7ff;
  border-color: #667eea;
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.package-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.package-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.package-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.package-features {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-item {
  font-size: 26rpx;
  color: #666;
}

/* 服务流程 */
.service-process {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.process-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.process-item {
  display: flex;
  align-items: flex-start;
}

.process-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.process-content {
  flex: 1;
}

.process-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.process-desc {
  font-size: 26rpx;
  color: #999;
}

/* 预约表单 */
.booking-section {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.booking-form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4444;
  margin-right: 4rpx;
}

.form-input {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 150rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}

.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 底部提交栏 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  box-sizing: border-box;
}

.price-info {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 26rpx;
  color: #999;
}

.price-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-size: 30rpx;
  font-weight: 500;
  padding: 24rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}
