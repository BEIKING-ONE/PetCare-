.coupon-center-page {
  background: linear-gradient(180deg, #ff9800 0%, #ff6b6b 100%);
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* 头部 */
.page-header {
  padding: 80rpx 30rpx 50rpx;
  text-align: center;
  color: white;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 优惠券列表 */
.coupon-list {
  padding: 0 24rpx;
}

.coupon-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.coupon-left {
  width: 180rpx;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #fff8e1, #ffecb3);
  display: flex;
  align-items: baseline;
  justify-content: center;
  color: #ff6b00;
}

.coupon-currency {
  font-size: 28rpx;
  font-weight: bold;
}

.coupon-amount {
  font-size: 56rpx;
  font-weight: bold;
}

.coupon-divider {
  width: 2rpx;
  height: 100rpx;
  background: repeating-linear-gradient(
    to bottom,
    #ddd 0,
    #ddd 10rpx,
    transparent 10rpx,
    transparent 20rpx
  );
}

.coupon-right {
  flex: 1;
  padding: 24rpx;
}

.coupon-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.coupon-condition {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.coupon-time {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.coupon-action {
  padding: 24rpx;
}

.receive-btn {
  background: linear-gradient(135deg, #ff9800, #ff6b00);
  color: white;
  font-size: 24rpx;
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.receive-btn.received {
  background: #ccc;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: white;
  margin-bottom: 16rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: white;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 40rpx 0;
}

.footer-tip text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
