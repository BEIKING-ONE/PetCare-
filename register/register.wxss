.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.register-container::before {
  content: 'üêæ';
  position: absolute;
  right: -40rpx;
  top: 100rpx;
  font-size: 200rpx;
  opacity: 0.08;
}

.register-container::after {
  content: 'üê±';
  position: absolute;
  left: -30rpx;
  bottom: 150rpx;
  font-size: 150rpx;
  opacity: 0.08;
}

.register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
  position: relative;
  z-index: 1;
}

.logo-emoji {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.register-form {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(139, 92, 246, 0.2);
  position: relative;
  z-index: 1;
}

.form-item {
  display: flex;
  align-items: center;
  background: #FAF5FF;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  height: 100rpx;
  border: 1rpx solid #E9D5FF;
}

.form-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.form-input {
  flex: 1;
  height: 100rpx;
  font-size: 30rpx;
  color: #1F2937;
}

.register-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(139, 92, 246, 0.4);
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 96rpx;
}

.register-btn::after {
  border: none;
}

.register-btn.loading {
  opacity: 0.7;
}

.register-btn[disabled] {
  background: #C4B5FD;
  box-shadow: none;
}

.register-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
}

.form-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.footer-text {
  font-size: 26rpx;
  color: #9CA3AF;
}

.link-text {
  font-size: 26rpx;
  color: #8B5CF6;
  margin-left: 10rpx;
}

.tips {
  text-align: center;
  margin-top: 40rpx;
}

.tips text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
