/* pages/coupons/coupons.wxss */
.coupons-page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 优惠券头部 */
.coupons-header {
  background: linear-gradient(135deg, #ff9800, #ff6b6b);
  padding: 80rpx 30rpx 50rpx;
  border-radius: 0 0 40rpx 40rpx;
  color: white;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 优惠券标签 */
.coupon-tabs {
  background: white;
  padding: 20rpx 30rpx;
  margin-top: -20rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4rpx 15rpx rgba(0,0,0,0.05);
  white-space: nowrap;
  display: flex;
  align-items: center;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx 28rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #eee;
  min-width: 160rpx;
  height: 60rpx;
  flex-shrink: 0;
  box-sizing: border-box;
}

.tab-item:last-child {
  margin-right: 0;
}

.tab-item.active {
  background: #fff3e0;
  color: #ff9800;
  border-color: #ff9800;
  font-weight: bold;
}

/* 优惠券列表 */
.coupon-list {
  padding: 30rpx;
}

.coupon-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 25rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
  border: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.coupon-card.available {
  border-left: 6rpx solid #ff9800;
}

.coupon-card.expired {
  border-left: 6rpx solid #999;
  opacity: 0.6;
}

.coupon-amount {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #fff3e0, #ff9800);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx 0 0 20rpx;
  color: white;
}

.coupon-amount .currency {
  font-size: 32rpx;
  margin-right: 5rpx;
}

.coupon-amount .amount {
  font-size: 60rpx;
  font-weight: bold;
}

.coupon-info {
  flex: 1;
  padding: 25rpx;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.coupon-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.coupon-expire {
  font-size: 22rpx;
  color: #999;
}

.coupon-actions {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  font-size: 24rpx;
  background: #ff9800;
  color: white;
}

.action-btn.expired {
  background: #999;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 30rpx;
  color: #ddd;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #ccc;
}

.go-shop-btn {
  background: #ff9800;
  color: white;
  border-radius: 30rpx;
  padding: 20rpx 60rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
}