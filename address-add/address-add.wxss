/* pages/address-add/address-add.wxss */

.address-add-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-back {
  font-size: 40rpx;
  color: #666;
  line-height: 1;
}

/* 表单区域 */
.address-form {
  margin-top: 16rpx;
}

.form-section {
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 0 32rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  width: 160rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  height: 40rpx;
  line-height: 40rpx;
}

.form-input::placeholder {
  color: #999;
}

/* 地区选择 */
.region-item {
  padding: 0;
}

.region-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.region-picker text {
  font-size: 28rpx;
  color: #333;
}

.region-picker .placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 详细地址 */
.form-textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  height: 120rpx;
  line-height: 40rpx;
  min-height: 120rpx;
  max-height: 200rpx;
  resize: none;
}

.form-textarea::placeholder {
  color: #999;
}

/* 复选框项 */
.checkbox-item {
  justify-content: space-between;
}

.form-switch {
  transform: scale(0.8);
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background-color: #ff6b35;
  border-radius: 48rpx;
  margin: 32rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background-color: #ccc;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .form-label {
    width: 140rpx;
  }
  
  .form-input,
  .form-textarea {
    font-size: 26rpx;
  }
}

@media (min-width: 414px) {
  .form-label {
    width: 180rpx;
  }
  
  .form-input,
  .form-textarea {
    font-size: 30rpx;
  }
}