/* pages/order-detail/order-detail.wxss */
.order-detail-page {
  background: linear-gradient(180deg, #FAF5FF 0%, #F5F3FF 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.order-status-header {
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  padding: 40rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 92, 246, 0.2);
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.order-number {
  color: rgba(255,255,255,0.8);
  font-size: 24rpx;
}

.order-time {
  color: rgba(255,255,255,0.8);
  font-size: 24rpx;
}

.order-section {
  background: white;
  margin: 20rpx 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.08);
  border: 1rpx solid #E9D5FF;
}

.section-title {
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
  border-bottom: 1rpx solid #E9D5FF;
}

.order-items {
  padding: 24rpx;
}

.order-item {
  display: flex;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #E9D5FF;
}

.order-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #FAF5FF, #F3E8FF);
  border: 1rpx solid #E9D5FF;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.item-spec {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 12rpx;
}

.item-price-qty {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.item-price {
  font-size: 32rpx;
  color: #EF4444;
  font-weight: bold;
}

.item-quantity {
  font-size: 26rpx;
  color: #6B7280;
}

.info-list {
  padding: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #6B7280;
}

.info-value {
  font-size: 26rpx;
  color: #1F2937;
  font-weight: 500;
}

.address-card {
  padding: 24rpx;
  background: #FAF5FF;
  border-radius: 12rpx;
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.address-name {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 500;
}

.address-phone {
  font-size: 26rpx;
  color: #6B7280;
}

.address-detail {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
}

.coupon-card {
  padding: 24rpx;
  background: linear-gradient(135deg, #FEF3C7, #FDE68A);
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coupon-name {
  font-size: 26rpx;
  color: #1F2937;
  font-weight: 500;
}

.coupon-value {
  font-size: 28rpx;
  color: #EF4444;
  font-weight: bold;
}

.cost-list {
  padding: 24rpx;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.cost-row:last-child {
  margin-bottom: 0;
}

.cost-row.total {
  padding-top: 16rpx;
  border-top: 2rpx solid #E9D5FF;
  margin-top: 16rpx;
}

.cost-label {
  font-size: 26rpx;
  color: #6B7280;
}

.cost-value {
  font-size: 26rpx;
  color: #1F2937;
  font-weight: 500;
}

.cost-value.discount {
  color: #EF4444;
}

.cost-value.total-price {
  font-size: 36rpx;
  color: #EF4444;
  font-weight: bold;
}

.order-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  gap: 12rpx;
}

.action-left {
  display: flex;
  gap: 12rpx;
}

.action-right {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 20rpx 32rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.cancel-btn {
  background: #F3F4F6;
  color: #6B7280;
  border: 1rpx solid #E5E7EB;
}

.pay-btn {
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
}

.confirm-btn {
  background: linear-gradient(135deg, #F472B6, #EC4899);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(244, 114, 182, 0.3);
}

.contact-btn {
  background: #F3E8FF;
  color: #8B5CF6;
  border: 1rpx solid #8B5CF6;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E9D5FF;
  border-top: 4rpx solid #8B5CF6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #9CA3AF;
}
