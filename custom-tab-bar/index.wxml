<view class="tab-bar">
  <view class="tab-bar-glass"></view>
  <view class="tab-bar-content">
    <view 
      wx:for="{{list}}" 
      wx:key="index" 
      class="tab-bar-item {{selected === index ? 'active' : ''}}"
      data-index="{{index}}"
      bindtap="switchTab"
      bindtouchstart="onTouchStart"
      bindtouchend="onTouchEnd"
    >
      <view class="tab-icon-wrapper" style="transform: scale({{iconScale[index]}})">
        <view class="liquid-ripple {{rippleIndex === index ? 'active' : ''}}"></view>
        <view class="tab-glow {{selected === index ? 'active' : ''}}"></view>
        <view class="tab-icon-container {{selected === index ? 'selected' : ''}}">
          <image 
            class="tab-icon" 
            src="{{selected === index ? item.selectedIconPath : item.iconPath}}"
          ></image>
        </view>
      </view>
      <text class="tab-text" style="color: {{selected === index ? selectedColor : color}}">
        {{item.text}}
      </text>
    </view>
  </view>
</view>
