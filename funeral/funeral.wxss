/* pages/funeral/funeral.wxss */

/* 页面容器 */
.funeral-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.funeral-header {
  background-color: #fff;
  padding: 30rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 服务介绍 */
.service-intro {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.intro-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.intro-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 20rpx;
}

.intro-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.intro-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
}

/* 通用部分标题 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

/* 服务项目 */
.service-items {
  margin-bottom: 20rpx;
}

.item-list {
  padding: 0 20rpx;
}

.service-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.service-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.item-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 22rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.item-price {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.item-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 预约表单 */
.booking-form {
  margin-bottom: 20rpx;
  flex: 1;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #333;
  background-color: #fafafa;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color: #333;
  background-color: #fafafa;
  resize: none;
}

/* 提交预约按钮部分 */
.submit-section {
  padding: 30rpx 20rpx;
  margin-top: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-btn:hover {
  transform: scale(1.02);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.4);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .page-title {
    font-size: 28rpx;
  }
  
  .intro-title {
    font-size: 24rpx;
  }
  
  .intro-desc {
    font-size: 20rpx;
  }
  
  .item-title {
    font-size: 22rpx;
  }
  
  .item-desc {
    font-size: 20rpx;
  }
  
  .form-input,
  .form-textarea {
    font-size: 22rpx;
  }
  
  .submit-btn {
    font-size: 24rpx;
  }
}

/* 触摸反馈 */
.service-item,
.submit-btn {
  -webkit-tap-highlight-color: transparent;
}

/* 禁用按钮默认样式 */
button {
  margin: 0;
  padding: 0;
  border: 0;
  background: transparent;
  outline: none;
}

button::after {
  border: none;
}